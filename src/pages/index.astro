---
import Base from '../layouts/base.astro';
---

<Base title="App">
  <div class="text-center">
    <h1 class="mb-8 text-4xl font-bold text-neutral-900">
      Bun + Astro + HTMX + Tailwind
    </h1>
    <button
      hx-get="/partials/clicked"
      hx-swap="innerHTML"
      hx-target="#result"
      class="rounded-lg bg-blue-600 px-6 py-3 font-semibold text-white hover:bg-blue-700"
    >
      Click me
    </button>
    <div id="result" class="mt-6 text-lg text-neutral-700"></div>
  </div>
</Base>
